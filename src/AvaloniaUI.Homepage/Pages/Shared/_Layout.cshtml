<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/normalize.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/navbar.css">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat+Alternates:wght@700&family=Montserrat:wght@300;500;700&display=swap" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
  <script src="/js/navbar.js"></script>
  <title>@ViewData["Title"] - AvaloniaUI.Homepage</title>
</head>

<body>
  <partial name="_Navbar.cshtml"/>

  <div class="page">
    <div class="hero-container">
      <div class="sidebar @ViewData["SidebarBackground"]">
        <a class="avalonia-logo large" href="/">Homepage</a>
        @RenderSection("Sidebar")
      </div>
      <div class="hero-content">
        @RenderSection("HeroContent")
      </div>
    </div>
    <div class="content">
      @RenderBody()
    </div>
    <partial name="_Footer.cshtml"/>
  </div>
</body>
</html>
