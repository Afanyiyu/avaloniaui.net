@* Layout for pages with a hero section, such as index and support *@

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="~/css/normalize.css">
  <link rel="stylesheet" href="~/css/vars.css">
  <link rel="stylesheet" href="~/css/base.css">
  <link rel="stylesheet" href="~/css/colors.css">
  <link rel="stylesheet" href="~/css/layout.css">
  <link rel="stylesheet" href="~/css/images.css">
  <link rel="stylesheet" href="~/css/navbar.css">
  <link rel="stylesheet" href="~/css/sidebar.css">
  <link rel="stylesheet" href="~/css/hero.css">
  <link rel="stylesheet" href="~/css/content.css">
  <link rel="stylesheet" href="~/css/footer.css">
  <link rel="stylesheet" href="~/lib/highlight.js/styles/vs2015.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat+Alternates:wght@700&family=Montserrat:wght@300;500;700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Source+Code+Pro:wght@400;600&display=swap" rel="stylesheet">
  <script src="~/lib/jquery/jquery.min.js"></script>
  <script src="~/lib/highlight.js/highlight.min.js"></script>
  <script src="~/lib/highlight.js/languages/fsharp.min.js"></script>
  <script src="~/lib/highlight.js/languages/xml.min.js"></script>
  <script src="~/js/site.js"></script>
  <title>@ViewData["Title"]</title>
</head>

<body>
  <partial name="_Navbar.cshtml" />

  <div class="page">
    <div class="hero-container">
      <div class="sidebar @(ViewData["SidebarBackground"] ?? "gray-gradient")">
        <a class="avalonia-logo large" href="/">Homepage</a>
        @RenderSection("Sidebar")
      </div>
      <div class="hero-content">
        @RenderSection("HeroContent")
      </div>
    </div>
    <div class="content">
      @RenderBody()
    </div>
    <partial name="_Footer.cshtml" />
  </div>
</body>
</html>
